{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "lib": [
            "es7",
            "dom"
        ]
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "src/truth-table-generator/output",
        "**.txt",
        "**.json"
    ],
    "compileOnSave": false
}
